  <body>
    <br />
    <% if logged_in? %>
      <button><a href="/logout">Log Out</a></button>
      <button><a href="/users/index">Edit pet</a></button>
      <button><a href="/pets/new">Add Pet</a></button>
    <% else !logged_in? %>
