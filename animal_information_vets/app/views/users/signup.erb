<% if @user && @user.errors %>
    <% @user.errors.full_messages.each do | error | %>
      <p><%= error %></p>
    <% end %>
  <% end %>

<h1>Sign up here!</h1>

<form method="POST" action="/signup">
  <label>Are you a Vet or Owner?</label>
    <select name="vet_owner">
      <option value="is_vet">Vet</option>
      <option value="is_owner">Owner</option>
    </select>
    <br />
    <br />
    <p>Username: <input type="text" name="username"></p>
    <p>Email: <input type="text" name="email"></p>
    <p>Password: <input type="password" name="password"></p>
   
    <p><input type="submit" value="Sign Up Here!"></p>
</form>
